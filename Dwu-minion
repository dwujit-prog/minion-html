    <div class="leg left"><div class="shoe"></div></div>
    <div class="leg right"><div class="shoe"></div></div>
  </div>

  <script>
    const pupils = document.querySelectorAll('.pupil');
    const eyes = document.querySelectorAll('.eye');
    const arms = document.querySelectorAll('.arm');
    const limitEye = 18;     // ระยะตาเลื่อน
    const limitHand = 35;    // ระยะสูงสุดที่มือยกขึ้น-ลง (องศา)

    document.addEventListener('mousemove', (e) => {
      // === ตาเลื่อนตามเมาส์ (เหมือนเดิม) ===
      pupils.forEach((pupil, index) => {
        const eye = eyes[index];
        const eyeRect = eye.getBoundingClientRect();

        const eyeX = eyeRect.left + eyeRect.width / 2;
        const eyeY = eyeRect.top + eyeRect.height / 2;

        const angle = Math.atan2(e.clientY - eyeY, e.clientX - eyeX);
        const moveX = Math.cos(angle) * limitEye;
        const moveY = Math.sin(angle) * limitEye;

        pupil.style.transform = `translate(${moveX}px, ${moveY}px)`;
      });

      // === มือยกตามเมาส์ (ตามแกน Y) ===
      const mouseYPercent = e.clientY / window.innerHeight; // 0 = บนสุด, 1 = ล่างสุด
      const rotation = (mouseYPercent - 0.5) * 2 * limitHand; // -35 ถึง +35 องศา

      arms.forEach(arm => {
        // มือซ้ายหมุนตามเข็มนาฬิกาเมื่อเมาส์อยู่ด้านล่าง
        // มือขวาหมุนทวนเข็มนาฬิกาเมื่อเมาส์อยู่ด้านล่าง
        const sign = arm.classList.contains('left') ? 1 : -1;
        arm.style.transform = `rotate(${rotation * sign}deg)`;
      });
    });
  </script>

</body>
